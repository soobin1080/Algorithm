
public class pg_2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String[] drum = { "######", ">#*###", "####*#", "#<#>>#", ">#*#*<", "######" };

		char[][] arr = new char[drum.length][drum.length];
		for (int i = 0; i < drum.length; i++) {
			for (int j = 0; j < drum.length; j++) {
				arr[i][j] = drum[i].charAt(j);
				System.out.print(arr[i][j] + " ");
			}
			System.out.println();
		}
		int count = 0;
		for (int i = 0; i < drum.length; i++) {
			if (start(0, i, arr, 0))
				System.out.println("이ㅏㄹ너리;넝린ㅇ");
				count++;
		}
		System.out.println(count);
	}

	private static boolean start(int y, int x, char[][] arr, int star) {
		// TODO Auto-generated method stub
		System.out.println(y + "," + x);
		if (y == arr.length) {
			return true;
		}
		if (star == 2) {
			return false;
		}
		switch (arr[y][x]) {
		case '#':
			start(y + 1, x, arr, star);
			break;
		case '>':
			start(y, x + 1, arr, star);
			break;
		case '<':
			start(y, x - 1, arr, star);
			break;
		case '*':
			start(y + 1, x, arr, star + 1);
			// 1이면 stop
			break;
		}
		return false;
	}

}
