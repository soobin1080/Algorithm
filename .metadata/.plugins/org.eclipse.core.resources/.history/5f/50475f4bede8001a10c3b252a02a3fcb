package codingtest;

public class solution2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "abcdcba";
		int max = 0;
		for (int i = 0; i < s.length(); i++) {// 시작점
			for (int j = 0; j < s.length(); j++) {// 몇개
				String a = s.substring(i, i + j);
				// 검사하기
				int n = a.length() / 2;
				for (int k = 0; k < n; k++) {
					if (a.charAt(k) != a.charAt(a.length() - k - 1))
						;
					break;
				}
				max = (max < n) ? n : max;
			}
		}
		
		System.out.println(max);

	}

}
